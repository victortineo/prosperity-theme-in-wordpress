.mod-ebook
	display block
	padding rem(50px 10px)
	background-color $bluecustom4
	cover('../images/background-ebook.jpg')
	background-position left center
	color $white
	.page-header
		.underline
			margin 0 auto
			height rem(3px)
			background-color $white
		h1
			font-size rem(26px)
			font-weight $font-bold
			color $white
			text-decoration uppercase
	.form
		display block
		center(rem(450px))
		.radio-group
			font-size rem(15px)
			font-weight $font-light
			padding-bottom rem(25px)
			label
				display inline
			input
				position relative
				opacity 1
				margin rem(5px)
				&:before
					content ''
					width rem(15px)
					height rem(15px)
					background-color $white
					position absolute
					top rem(-1px)
					left rem(-2px)
					opacity 1
					border-radius 100%
					border rem(2px) solid $bluecustom3
					background-color darken($white, 80%)
				&:checked
					&:before
						content ''
						background-color $bluecustom3
		.inputs-group
			padding rem(10px 15px)
			+above(rem(480px))
				padding rem(10px 25px)
			input
				padding rem(5px 10px)
				font-size rem(14px)
				font-weight $font-light
				border 0
				+placeholder()
					font-weight $font-light
					color darken($white, 30%)
			.inputs-two
				margin-bottom rem(15px)
				overflow auto
				clear both
				input
					column(1/2)
			.inputs-three
				margin-bottom rem(15px)
				overflow auto
				clear both
				input
					column(1/3)
			.input-submit
				text-align center
				width 100%
				.submit
					display inline-block
					width auto
					font-size rem(14px)
					font-weight $font-semi
					text-transform uppercase
					padding rem(5px 15px)
					border 0
					background-color $redcustom3
					margin 0 auto
					&:hover
						color $white
						background-color darken($redcustom3,20%)
					