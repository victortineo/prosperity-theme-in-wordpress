.mod-blog
	color $black
	.page-content
		padding rem(15px 10px)
		background-color $bluecustom4
		color $white
		font-size rem(24px)
		text-align center
		.wrapper
			center(rem(970px))
		p
			font-weight $font-light 
			text-transform uppercase
	.posts
		column(1/1)
		+above(rem(768px))
			column(3/4)
		&-wrapper
			padding rem(25px 10px)
			+above(rem(768px))
				padding rem(100px 10px)
		&-preview
			column(1/1)
			margin-bottom rem(25px)
			+above(rem(768px))
				column(1/3, cycle: 3)
			&-thumbnail
				margin 0
				min-height rem(180px)
				background-position center
				background-repeat no-repeat
				background-size cover
				text-align center
			&-content
				overflow hidden
				padding rem(15px)
				background-color $redcustom4
				color $white
				h1
					font-size rem(18px)
					font-weight $font-semi
					color $white
					text-transform uppercase
				p
					font-size rem(15px)
					font-weight $font-light
			&-infos
				padding rem(15px)
				text-align center
				&-time
					font-size rem(12px)
					text-transform uppercase
					color $bluecustom4
				&-text
					font-size rem(14px)
					text-transform uppercase
					color $black
		a
			color $white
			&:hover
				color $white
				text-decoration none